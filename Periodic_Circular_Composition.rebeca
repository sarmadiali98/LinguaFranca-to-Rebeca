reactiveclass Node(100) {
    knownrebecs {
        Node next;
    }

    statevars {
        int period;
        int recievedMsg;
    }
    	
    Node() {
        self.sendMsg();
        period = 1;
    }
    
    msgsrv sendMsg() {
        int msg;
        msg = 1;
        next.rcvMsg(msg);
        self.sendMsg() after(period);
    }

    msgsrv rcvMsg(int msg) {
        recievedMsg = msg;
    }
}

